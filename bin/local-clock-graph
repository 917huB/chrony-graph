#!/bin/sh

gnuplot <<EOF
set terminal png size 900,600
set xdata time
set timefmt "%s"
set output "local-clock.png"
set grid
set xlabel "Time"
set format x "%d-%H:%M"
set xtic rotate by -45 scale 0
set ytics format "%1.2f us" nomirror textcolor rgb '#0060ad'
set y2tics format "%2.3f ppm" nomirror textcolor rgb '#dd181f'
set title "Local Clock Offsets"
set key bottom right box
set style line 1 lc rgb '#0060ad' lt 1 lw 1 pt 7 ps 0   # --- blue
set style line 2 lc rgb '#dd181f' lt 1 lw 1 pt 5 ps 0   # --- red
set lmargin 12
set rmargin 12
plot \
 "loopstats" using 1:(\$2*1000000) title "clock offset us" with linespoints ls 1, \
 "loopstats" using 1:3 title "frequency offset ppm" with linespoints ls 2 axis x1y2
EOF

NINETYFIVE=`../bin/percentile 3 95 loopstats | ../bin/mul 1000000`
NINETYNINE=`../bin/percentile 3 99 loopstats | ../bin/mul 1000000`
FIVE=`../bin/percentile 3 5 loopstats | ../bin/mul 1000000`
ONE=`../bin/percentile 3 1 loopstats | ../bin/mul 1000000`
NF_M_F=`echo $NINETYFIVE - $FIVE | bc`
NN_M_O=`echo $NINETYNINE - $ONE | bc`
gnuplot <<EOF
set terminal png size 900,600
set xdata time
set timefmt "%s"
set output "local-clock-stddev.png"
set grid
set xlabel "Time"
set format x "%d-%H:%M"
set xtic rotate by -45 scale 0
set ytics format "%1.2f us" nomirror
set title "RMS Time Jitter"
set key top right box
set style line 1 lc rgb '#0060ad' lt 1 lw 1 pt 7 ps 0   # --- blue
set style line 2 lc rgb '#dd181f' lt 1 lw 1 pt 5 ps 0   # --- red
set label 1 gprintf("99%% = $NINETYNINE us",99) at graph 0.01,0.95 left front
set label 2 gprintf("95%% = $NINETYFIVE us",95) at graph 0.01,0.9 left front
set label 3 gprintf(" 5%% = $FIVE us",5) at graph 0.01,0.85 left front
set label 4 gprintf(" 1%% = $ONE us",1) at graph 0.01,0.8 left front
set label 5 gprintf("95%% - 5%% = $NF_M_F us",90) at graph 0.01,0.75 left front
set label 6 gprintf("99%% - 1%% = $NN_M_O us",98) at graph 0.01,0.7 left front
set lmargin 12
set rmargin 12
plot \
 "loopstats" using 1:(\$4*1000000) title "Jitter" with linespoints ls 1, \
 $NINETYNINE title "99th percentile", \
 $NINETYFIVE title "95th percentile", \
 $FIVE title "5th percentile", \
 $ONE title "1st percentile"
EOF

NINETYFIVE=`../bin/percentile 4 95 loopstats`
NINETYNINE=`../bin/percentile 4 99 loopstats`
FIVE=`../bin/percentile 4 5 loopstats`
ONE=`../bin/percentile 4 1 loopstats`
NF_M_F=`echo $NINETYFIVE - $FIVE | bc`
NN_M_O=`echo $NINETYNINE - $ONE | bc`
gnuplot <<EOF
set terminal png size 900,600
set xdata time
set timefmt "%s"
set output "local-clock-skew.png"
set grid
set xlabel "Time"
set format x "%d-%H:%M"
set xtic rotate by -45 scale 0
set ytics format "%1.3f ppm" nomirror
set title "RMS Frequency Jitter - ADEV aka wander"
set key top right box
set style line 1 lc rgb '#0060ad' lt 1 lw 1 pt 7 ps 0   # --- blue
set style line 2 lc rgb '#dd181f' lt 1 lw 1 pt 5 ps 0   # --- red
set label 1 gprintf("99%% = $NINETYNINE ppm",99) at graph 0.01,0.95 left front
set label 2 gprintf("95%% = $NINETYFIVE ppm",95) at graph 0.01,0.9 left front
set label 3 gprintf(" 5%% = $FIVE ppm",5) at graph 0.01,0.85 left front
set label 4 gprintf(" 1%% = $ONE ppm",1) at graph 0.01,0.8 left front
set label 5 gprintf("95%% - 5%% = $NF_M_F ppm",90) at graph 0.01,0.75 left front
set label 6 gprintf("99%% - 1%% = $NN_M_O ppm",98) at graph 0.01,0.7 left front
set lmargin 12
set rmargin 12
plot \
 "loopstats" using 1:5 title "stability" with linespoints ls 2, \
 $NINETYNINE title "99th percentile", \
 $NINETYFIVE title "95th percentile", \
 $FIVE title "5th percentile", \
 $ONE title "1st percentile"
EOF
